<div class="container"></div>

    <div class="row">
        <div class="col-sm-6 offset-sm-3">
            <h1>id: <%= @task.id %> のタスク詳細ページ</h1>
        </div>
    </div>
    
    <div class="row">
        <div class="col-sm-6 offset-sm-3">
            <table class="table table-borderless" style="table-layout:fixed;width:100%;">
                <tbody>
                    <tr>
                        <td style="width:30%">ステータス</td>
                        <td style="width:10%">:</td>
                        <td style="word-wrap:break-word;"><%= @task.status %></td>
                    </tr>
                    <tr>
                        <td style="width:30%">タスク</td>
                        <td style="width:10%">:</td>
                        <td style="word-wrap:break-word;"><%= @task.content %></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    
    <div class="row">
        <div class="col-sm-6 offset-sm-3">
            <div class="text-right">
                <%= link_to "編集する", edit_task_path(@task), class: 'btn btn-success' %> 
                <%= link_to "削除する", @task, method: :delete, data: {confirm:"本当に削除してもよろしいですか？"}, class: 'btn btn-danger' %>
                <%= link_to "タスク一覧", tasks_path, class: 'btn btn-secondary' %>
            </div>
        </div>
    </div>

</div>