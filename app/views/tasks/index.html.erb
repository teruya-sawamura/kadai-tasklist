<div class="text-center">
  <h1>タスク一覧</h1>
</div>

<div class="row">
  <div class="col-sm-6 offset-sm-3">

        <table class="table table-borderless" style="table-layout:fixed;width:100%;">
          <% @tasks.each do |task| %>
              <tbody>
                <tr>
                  <th style="width:10%"><%= link_to task.id , task %>:</th>
                  <td style="width:30%"><%= task.status %></td>
                  <td style="width:10%">&gt;</td>
                  <td style="word-wrap:break-word;"><%= task.content %></td>
                </tr>
              </tbody>
          <% end %>
        </table>

    <div class="text-right">
      <%= link_to "タスク作成", new_task_path, class: 'btn btn-primary' %>
    </div>

  </div>
</div>


